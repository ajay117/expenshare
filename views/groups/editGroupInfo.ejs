<%- include('../partials/head') %> <% if(admin) { %>
    
<div class="container">
    <p class="mb-4"><a class="btn btn-dark text-white" href="/admin/<%= groupObj.admin %>">&#8592; Back</a></p>
  <form id="form-group-name"
    class="form mt-2"
    action="/admin/<%= adminId %>/groups/<%= groupId %>/update?_method=PUT"
    method="post"
  >
    <div class="mb-3">
      <label for="group_name" class="form-label">Edit Group Name</label>
      <input
        type="text"
        class="form-control"
        id="group_name"
        name="group_name"
        placeholder="Group Name"
        value="<%= groupObj.groupName %>"
        required
      />
    </div>

    <div class="mb-3 member-input hide">
        <label for="new_member" class="form-label">Add New Member</label>
        <input
          type="text"
          class="form-control"
          id="new_member"
          name="new_member"
          placeholder="Name"
        />
      </div>
</form>

    
    <% if(groupObj.member.length > 0) { %>
    <p class="underline">Group Members :-</p>
    <% groupObj.member.forEach((person,index) => { %>
    <div class="d-flex justify-content-between align-items-center">
      <p class="text-sm text-bold"><%= person %></p>
      <form
        action="/admin/<%= adminId %>/groups/<%= groupObj._id %>/member/<%= index %>/delete?_method=DELETE"
        method="post"
      >
        <!-- <button class="btn btn-danger">Delete</button> -->
        <button class="btn btn-danger">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-trash3"
            viewBox="0 0 16 16"
          >
            <path
              d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"
            />
          </svg>
        </button>
    </div>
    <% }) %> <% }%>

    <div class="d-grid gap-2">
      <button type="button" class="btn btn-success text-white btn-add-member">
        Add new member
      </button>
    </div>
    <div class="d-grid gap-2" form="form-group-name">
      <button class="btn btn-primary" type="submit">Update</button>
    </div>
  </form>
</div>

<script>
  let memberInput = document.querySelector(".member-input");
  let btnAddMember = document.querySelector(".btn-add-member");

  btnAddMember.addEventListener("click", () => {
    memberInput.classList.remove("hide");
    btnAddMember.disabled = "true";
  });
</script>

<% } %> <%- include('../partials/foot') %>




